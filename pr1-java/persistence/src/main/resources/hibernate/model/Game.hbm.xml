<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="pr1Java.model.Game" table="games">
        <id name="id" column="gameId">
            <generator class="increment"/>
        </id>
        <property name="name" column="name"/>
        <property name="homeTeam" column="homeTeam"/>
        <property name="awayTeam" column="awayTeam"/>
        <property name="availableSeats" column="availableSeats"/>
        <property name="seatCost" column="seatCost"/>
    </class>
</hibernate-mapping>
